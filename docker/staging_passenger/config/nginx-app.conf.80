server {
    listen 80;
    server_name homologacao-tcc-docker.ifes.br;

    root /home/app/repo/public;

    passenger_enabled on;
    passenger_user app;
    passenger_app_env production;
    passenger_ruby /usr/local/rvm/wrappers/ruby-2.2.10@sistema-tcc/ruby;
    passenger_min_instances 8;
    client_max_body_size 100m;
    client_body_buffer_size 128k;

    location ~ ^/assets/ {
        gzip_static on; # to serve pre-gzipped version
        gzip_vary on;
        expires max;
        add_header  ETag "";
        add_header  Cache-Control public;
        break;
    }

    location ~^/images/ {
        expires max;
        add_header  Cache-Control public;
        break;
    }

}

passenger_pre_start http://homologacao-tcc-docker.ifes.br;
